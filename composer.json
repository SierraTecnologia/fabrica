{
    "name": "sierratecnologia/fabrica",
    "description": "Fabrica de Projetos",
    "type": "library",
    "keywords": [
        "sierratecnologia",
        "fabrica"
    ],
    "license": "MIT",
    "homepage": "https://sierratecnologia.com/packages/fabrica/",
    "support": {
        "email": "help@sierratecnologia.com",
        "issues": "https://github.com/sierratecnologia/fabrica/issues",
        "source": "https://github.com/sierratecnologia/fabrica",
        "docs": "https://github.com/sierratecnologia/fabrica/blob/master/README.md"
    },
    "authors": [
        {
            "name": "SierraTecnologia",
            "homepage": "https://sierratecnologia.com.br",
            "email": "help@sierratecnologia.com.br"
        }
    ],
    "require": {
        "php": "^7.4",
        "sierratecnologia/integrations":    "dev-master",
        "sierratecnologia/operador":    "dev-master",
        "deployer/deployer":            "^6.8",
        "guzzlehttp/guzzle": "^6.0 || ^7.0",
        "sierratecnologia/muleta":      "dev-master",
        "gitonomy/gitlib":              "^1.2",
        "lorisleiva/laravel-actions": "^1.1"
    },
    "suggest": {
        "leafo/lessphp":                ">=0.4",
        "phpbench/phpbench":            "*",
        "phploc/phploc":                "*",
        "phpmd/phpmd":                  "*",
        "squizlabs/php_codesniffer":    "*",
        "phpro/grumphp":                "*",
        "phpseclib/phpseclib":          "*",
        "phpstan/phpstan":              "*",
        "phpunit/phpunit":              "*",
        "sebastian/diff":               "*",
        "sebastian/phpcpd":             "*",
        "alexandresalome/php-webdriver": "Php webdriver"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Fabrica\\": "src/"
        }
    },
     "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check-style": "phpcs -p --standard=PSR12 src --extensions=php",
        "fix-style": "phpcbf -p --standard=PSR12 src --extensions=php"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../**",
            "options": {
                "symlink": true
            }
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "laravel": {
            "providers": [
                "Fabrica\\FabricaProvider"
            ]
        }
    }
}
