<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity repository-class="Fabrica\Models\Code\Repository\ProjectRepository" name="Fabrica\Models\Code\Project" table="project">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY" />
        </id>

        <field name="name" type="string" column="name" length="32" unique="true" />
        <field name="slug" type="string" column="slug" length="32" unique="true" />
        <field name="defaultBranch" type="string" column="default_branch" length="32" />
        <field name="repositorySize" type="integer" column="repository_size" nullable="true" />

        <one-to-many field="userRoles" target-entity="Fabrica\Models\Code\UserRoleProject" mapped-by="project">
            <cascade>
                <cascade-remove />
                <cascade-persist />
            </cascade>
        </one-to-many>
        <one-to-many field="gitAccesses" target-entity="Fabrica\Models\Code\ProjectGitAccess" mapped-by="project">
            <cascade>
                <cascade-remove />
                <cascade-persist />
            </cascade>
        </one-to-many>
        <one-to-many field="feeds" target-entity="Fabrica\Models\Code\Feed" mapped-by="project">
            <cascade>
                <cascade-remove />
                <cascade-persist />
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
